<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#F9FBFF">

    <Spinner
        android:id="@+id/spinner_nums2"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/phoneTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/phoneTV"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnGetCodePrivate"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="125dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/okbtn"
        android:text="@string/continue_string"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <CheckBox
        android:id="@+id/checkBoxTerms"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="@color/grey_text"
        android:buttonTint="@color/grey_text"
        android:shadowColor="@color/grey_text"

        android:text="@string/terms"
        android:textColor="@color/grey_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phoneTV" />

    <EditText
        android:inputType="textCapWords|textNoSuggestions|textPersonName"

        android:id="@+id/lastNameTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="30dp"
        android:hint="@string/last_name_tv"
        android:textColorHint="@color/grey_text"
        android:theme="@style/CustomEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstNameTV">

    </EditText>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="53dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginRight="10dp"
            android:text="@string/account_owner"
            android:textColor="#262626"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/confidentional"
            android:textColor="#262626"
            android:textSize="16sp"></TextView>
    </LinearLayout>

    <EditText
        android:inputType="textCapWords|textNoSuggestions|textPersonName"
        android:id="@+id/firstNameTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:hint="@string/first_name_tv"
        android:textColorHint="@color/grey_text"
        android:theme="@style/CustomEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

    </EditText>

    <EditText
        android:id="@+id/phoneTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="30dp"
        android:hint="@string/phone_number_tv"
        android:inputType="phone"
        android:maxEms="10"
        android:maxLength="10"
        android:textColorHighlight="@color/grey_text"
        android:textColorHint="@color/grey_text"
        android:textColorLink="@color/grey_text"
        android:theme="@style/CustomEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/spinner_nums2"
        app:layout_constraintTop_toBottomOf="@+id/lastNameTV">

    </EditText>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:gravity="center"
        android:text="@string/create_private_acc_title"
        android:textColor="#262626"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:shadowColor="@color/grey_text"
        android:text="@string/already_have_an_acc_string"
        android:textColor="@color/grey_text"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/checkBoxTerms"
        app:layout_constraintHorizontal_bias="0.415"
        app:layout_constraintStart_toStartOf="@+id/checkBoxTerms"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxTerms" />

    <TextView
        android:id="@+id/logIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F9FBFF"
        android:text="@string/log_in_underline"
        android:textColor="@android:color/black"

        app:layout_constraintBottom_toBottomOf="@+id/textView13"
        app:layout_constraintEnd_toEndOf="@+id/checkBoxTerms"
        app:layout_constraintHorizontal_bias="0.209"
        app:layout_constraintStart_toEndOf="@+id/textView13"
        app:layout_constraintTop_toTopOf="@+id/textView13"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/first_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/first_name_tv"
        android:textColor="@color/grey_text"
        app:layout_constraintBottom_toTopOf="@+id/firstNameTV"
        app:layout_constraintStart_toStartOf="@+id/firstNameTV" />

    <TextView
        android:id="@+id/last_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/last_name_tv"
        android:textColor="@color/grey_text"
        app:layout_constraintBottom_toTopOf="@+id/lastNameTV"
        app:layout_constraintStart_toStartOf="@+id/lastNameTV" />

    <TextView
        android:id="@+id/phone_number_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/phone_number_tv"
        android:textColor="@color/grey_text"
        app:layout_constraintBottom_toTopOf="@+id/phoneTV"
        app:layout_constraintEnd_toEndOf="@+id/phoneTV"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/spinner_nums2" />

    <View
        android:id="@+id/view2"
        android:layout_width="29dp"
        android:layout_height="1dp"
        android:layout_marginBottom="5dp"
        android:background="@color/grey_text"
        app:layout_constraintBottom_toBottomOf="@+id/phoneTV"
        app:layout_constraintEnd_toEndOf="@+id/spinner_nums2"
        app:layout_constraintHorizontal_bias="0.263"
        app:layout_constraintStart_toStartOf="@+id/spinner_nums2"
        app:layout_constraintTop_toBottomOf="@+id/spinner_nums2" />


</androidx.constraintlayout.widget.ConstraintLayout>
